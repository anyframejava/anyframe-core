<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="core" description="Core Plugin is the basic plugin which is the basis of all plugins provided by Anyframe, and consists of sample code to guide how to use Spring MVC, Spring, etc. and reference libraries to use these open sources.">
	<groupId>org.anyframe.plugin</groupId>
	<artifactId>anyframe-core-pi</artifactId>
	<version>1.0.0</version>
	<dependent-plugins>
		<dependent-plugin name="datasource" version="1.0.0-SNAPSHOT&lt;=*" />
		<dependent-plugin name="logging" version="1.0.0-SNAPSHOT&lt;=*" />
		<dependent-plugin name="spring" version="1.0.0-SNAPSHOT&lt;=*" />
	</dependent-plugins>	
	<resources>
		<resource dir="src/main/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/main/resources" filtered="true" packaged="false">
			<include name="**/*.*" />
		</resource>
		<resource dir="src/test/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/test/resources" filtered="false" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/main/webapp" filtered="false" packaged="false">
			<include name="**/*.*" />
			<exclude name="WEB-INF/web.xml" />
			<exclude name="**/sample/common/taglibs.jsp" />
		</resource>
		<resource dir="src/main/webapp" filtered="true" packaged="false">
			<include name="**/sample/common/taglibs.jsp" />
		</resource>
		<resource dir="db/scripts" filtered="false" packaged="false">
			<include name="**/*.sql" />
		</resource>
	</resources>
	<build>
		<filesets>
			<fileset dir="src/main/java" filtered="true" packaged="true">
				<include name="**/*.java" />
			</fileset>
			<fileset dir="src/main/resources" filtered="true" packaged="false">
				<include name="**/*.*" />
				<exclude name="**/*.properties" />
			</fileset>
			<fileset dir="src/main/resources" filtered="false" packaged="false">
				<include name="**/*.properties" />
			</fileset>
			<fileset dir="src/test/java" filtered="true" packaged="true">
				<include name="**/*.java" />
			</fileset>
			<fileset dir="src/test/resources" filtered="false" packaged="false">
				<include name="**/*.xml" />
			</fileset>
			<fileset dir="src/main/webapp" filtered="false" packaged="false">
				<include name="**/*.*" />
				<exclude name="**/sample/common/taglibs.jsp" />
				<exclude name="**/sample/common/error.jsp" />
			</fileset>
			<fileset dir="src/main/webapp" filtered="true" packaged="false">
				<include name="**/sample/common/taglibs.jsp" />
				<include name="**/sample/common/error.jsp" />
			</fileset>
			<fileset dir="db/scripts" filtered="false" packaged="false">
				<include name="**/*.sql" />
			</fileset>
		</filesets>
	</build>
	<samples>true</samples>
	<essential>true</essential>
</plugin>