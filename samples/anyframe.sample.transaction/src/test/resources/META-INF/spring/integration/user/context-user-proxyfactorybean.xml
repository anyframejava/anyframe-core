<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<bean id="UserServiceWithProxyFactoryBean" parent="txConfig">
		<property name="target">
			<bean
				class="org.anyframe.sample.transaction.user.service.impl.UserServiceImpl">
				<property name="userDAO">
					<bean
						class="org.anyframe.sample.transaction.user.dao.UserDAO">
						<property name="queryService"
							ref="queryService" />
					</bean>
				</property>
			</bean>
		</property>
		<property name="proxyInterfaces"
			value="org.anyframe.sample.transaction.user.service.UserService" />
	</bean>

	<!-- transaction management -->
	<bean id="txConfig" abstract="true"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="transactionManager" />
		<property name="transactionAttributes">
			<props>
				<prop key="*">
					PROPAGATION_REQUIRED,-java.lang.Exception,-anyframe.common.exception.BaseException,+org.anyframe.sample.transaction.user.service.EmpException
				</prop>
			</props>
		</property>
	</bean>

</beans>
