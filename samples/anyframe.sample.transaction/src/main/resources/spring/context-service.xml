<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans     
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="anyframe.sample.transaction" />
	
	<bean id="productDao" class="anyframe.core.generic.dao.query.GenericDaoQuery">
		<property name="persistentClass" value="anyframe.sample.domain.Product"/>
		<property name="queryService" ref="queryService" />
	</bean>

</beans>
